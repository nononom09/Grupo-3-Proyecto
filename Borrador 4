<script>

// ====== DATA ======

const PRODUCTS = [
{id:1,name:'Margherita',cat:'Clasicas',price:8.50,desc:'Tomate San Marzano, mozzarella, albahaca fresca',img:'M'},
{id:2,name:'Pepperoni Deluxe',cat:'Carnes',price:10.50,desc:'Extra pepperoni, queso fundido',img:'P'},
{id:3,name:'Hawaiana',cat:'Especiales',price:11.00,desc:'Jamón, piña caramelizada',img:'H'},
{id:4,name:'Veggie Garden',cat:'Vegetarianas',price:9.75,desc:'Pimientos, champiñones, aceitunas',img:'V'},
{id:5,name:'Cuatro Quesos',cat:'Clasicas',price:12.00,desc:'Mozzarella, gorgonzola, parmesano, ricotta',img:'4'},
{id:6,name:'BBQ Chicken',cat:'Carnes',price:12.50,desc:'Pollo BBQ, cebolla morada, cilantro',img:'B'},
{id:7,name:'Trufa Especial',cat:'Gourmet',price:15.00,desc:'Aceite de trufa, setas salteadas',img:'T'},
{id:8,name:'Mexicana',cat:'Especiales',price:11.25,desc:'Chorizo, jalapeños, crema',img:'X'}
];

// ====== STATE ======
<button class="remove" data-id="${it.id}">Eliminar</button>
</div>
`;
cartListEl.appendChild(el);
});


// attach controls
cartListEl.querySelectorAll('.qty-inc').forEach(b=>b.addEventListener('click', e=>{ changeQty(e.currentTarget.dataset.id,1); playBeep({freq:880,vol:0.02}); }));
cartListEl.querySelectorAll('.qty-dec').forEach(b=>b.addEventListener('click', e=>{ changeQty(e.currentTarget.dataset.id,-1); playBeep({freq:520,vol:0.02}); }));
cartListEl.querySelectorAll('.remove').forEach(b=>b.addEventListener('click', e=>{ removeFromCart(e.currentTarget.dataset.id); }));


cartBadge.textContent = cartCount();
cartTotalEl.textContent = '$' + cartTotal().toFixed(2);
}


// small animation when cart changes
const cartNode = document.querySelector('.cart'); if(cartNode){ cartNode.classList.remove('pulse'); void cartNode.offsetWidth; cartNode.classList.add('pulse'); }
}


// extra little badge animation
function animateCartBadge(){ cartBadge.style.display='block'; cartBadge.style.transform='scale(0.8)'; setTimeout(()=>cartBadge.style.transform='scale(1)',120); cartBadge.textContent = cartCount(); }


// ====== UI BINDINGS ======
$('openCartBtn').addEventListener('click', ()=>{ document.querySelector('.cart').scrollIntoView({behavior:'smooth'}); playBeep({freq:900}); });
$('clearCart').addEventListener('click', ()=>{ state.cart={}; saveCart(); renderCart(); playBeep({freq:260,duration:0.12}); });
$('checkoutBtn').addEventListener('click', ()=>{ if(cartCount()===0){ alert('Tu carrito está vacío'); return;} playBeep({freq:1400,duration:0.14}); alert('Gracias por tu pedido! (simulado)'); state.cart={}; saveCart(); renderCart(); });
$('checkoutMock').addEventListener('click', ()=>{ alert('Redirigiendo a pago... (demo)')});
$('search').addEventListener('input', (e)=>{ state.query=e.target.value; renderAll(); });
$('clearSearch').addEventListener('click', ()=>{ $('search').value=''; state.query=''; renderAll(); });


// ====== BOOT ======
function renderAll(){ renderCats(); renderProducts(); renderCart(); }
// initial seed: animate badges correctly
if(!localStorage.getItem('pizza_cart')) localStorage.setItem('pizza_cart', JSON.stringify(state.cart));
renderAll();


// allow audio to unlock on first user gesture
['click','touchstart'].forEach(ev=> document.addEventListener(ev, function unlock(){ try{ audioCtx.resume(); }catch(e){} document.removeEventListener(ev, unlock); }));


// keyboard accessibility: add keyboard handler for category buttons
document.addEventListener('keydown', (e)=>{
if(e.key==='c') { state.category='Todas'; renderAll(); }
});


</script>
